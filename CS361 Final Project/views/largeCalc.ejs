<% include partials/header %>

    <div class="ui main text container segment">
        <div class="ui huge header">Large Purchase Calculator
        </div>

        <% var totalExpenses = 0; var availableIncome = 0;%>
        <% var annualIncome = 0; var total = 0 %>
        <% var estPayment = 0; %>

        <% fin_people.forEach(function(list){ %>
            <% annualIncome = list.annual_inc %>
            Annual Income: $<%= annualIncome %><br>
        <% }); %>

        
        <% context.forEach(function(list){ %>
            <% totalExpenses += list.expenses %>
        <% }); %>

            Annual Expenses: $<%= totalExpenses %><br>
        <% total = annualIncome - totalExpenses %>
            Available Income: $<%= total %><br>
        <form method="POST" action="/calculate">
        Purchase Amount:<br>
        <input type="number" name="amount"><br>
        Number of Years - Financed:<br>
        <input type="number" name="years"><br>
        <input type="submit" value="Set"><br>
        </form>
        <% estPayment = userInput.noAmount / (userInput.noYears * 12) %>
        <p><h1>Est. Monthly Payments: $<%= estPayment.toFixed([2]) %></h1></p>
        

<div id="result"> </div>

    </div>

<% include partials/footer %>

